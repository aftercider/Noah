    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:debuggable="true">
        <activity
            android:name="HomeActivity"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="AccountActivity" android:label="@string/title_activity_account"></activity>
        <activity android:name="HashedTweetActivity" android:label="@string/title_activity_hashedtweet"></activity>
        <activity android:name="InformationActivity" android:label="@string/title_activity_information"></activity>
        <activity android:name="ItemListActivity" android:label="@string/title_activity_itemlist"></activity>
        <activity android:name="PlanningActivity" android:label="@string/title_activity_planning"></activity>
        <activity android:name="StaffActivity" android:label="@string/title_activity_staff"></activity>
        <activity android:name="StatusActivity" android:label="@string/title_activity_status"></activity>
        <activity android:name="SummaryActivity" android:label="@string/title_activity_summary"></activity>
        <activity android:name="TwitterAuthActivity" android:label="@string/title_activity_twitterauth"></activity>
        <activity android:name="WebActivity" android:label="@string/title_activity_web"></activity>
        <activity android:name="com.aftercider.tool.TwitterOAuth" android:label="@string/app_name"></activity>
    </application>

</manifest>