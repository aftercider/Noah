<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/tableborder" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <ToggleButton
        android:id="@+id/togglebutton_summary_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/check_summary_togglebutton" />

    <TextView
        android:id="@+id/textview_summary_item_name"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:singleLine="false"
        android:gravity="center_vertical"
        />
    
    <TextView
        android:id="@+id/textview_summary_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"/>

    <TextView
        android:id="@+id/textview_summary_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:gravity="right|center_vertical"/>

</TableRow>