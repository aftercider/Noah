<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/backgroundtexture"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/text_twitter_head" />

    <ListView
        android:id="@+id/listview_twitter"
        android:layout_width="fill_parent"
        android:layout_height="0dip" 
        android:layout_weight="1"
        android:background="@drawable/transparent_listitem"
        android:listSelector="@drawable/transparent_listitem"
    	  android:cacheColorHint="@null"
        android:choiceMode="none"
        android:divider="@null">
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        >

        <Button
            android:id="@+id/button_twitter_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_twitter_account"
            android:background="@drawable/normal_button"
            android:textSize="20sp" 
            android:layout_weight=".5"/>

        <Button
            android:id="@+id/button_twitter_tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_twitter_tweet" 
            android:background="@drawable/normal_button"
            android:textSize="20sp" 
            android:layout_weight=".5"/>

    </LinearLayout>

</LinearLayout>